<div class="modal-backdrop show">
    <div class="modal-container">
        <div class="modal-content">
            <h2 class="victory-title">Parabéns!</h2>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-value">@TimeSpent</div>
                    <div class="stat-label">Tempo</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">@MovesCount</div>
                    <div class="stat-label">Movimentos</div>
                </div>
            </div>

            <div class="button-container">
                <button class="modal-button primary-button" @onclick="OnPlayAgain">
                    Jogar Novamente
                </button>
                <button class="modal-button secondary-button" @onclick="OnMainMenu">
                    Menu Principal
                </button>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public string TimeSpent { get; set; } = string.Empty;
    [Parameter]
    public int MovesCount { get; set; } = 10;
    [Parameter]
    public EventCallback OnPlayAgain { get; set; }
    [Parameter]
    public EventCallback OnMainMenu { get; set; }
}

<style>
