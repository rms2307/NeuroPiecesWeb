        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        transform: translateY(20px);
        opacity: 0;
        transition: all 0.3s ease;
    }

    .modal-backdrop.show .modal-container {
        transform: translateY(0);
        opacity: 1;
    }

    .modal-content {
        padding: 1.5rem;
    }

    .victory-title {
        text-align: center;
